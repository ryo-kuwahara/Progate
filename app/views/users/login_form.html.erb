<div class="main users-new">
    <div class="container">
        <div class="form-heading">ログイン</div>
        <div class="form users-form">
            <div class="form-body">
                <% if @error_message %>
                <div class="form-error">
                    <%= @error_message %>
                    </div>
                    <% end %>
                
                <%= form_tag("/login") do %>
                <P>メールアドレス</P>
                <input name="email">
                <P>パスワード</P>
                <input name="password" type="password">
                <input type="submit" value="ログイン">
                <% end %>
            </div>
        </div>
    </div>
</div>